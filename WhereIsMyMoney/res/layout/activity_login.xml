<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/moe_money_background"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="1"
    tools:context=".Login" >

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_margin="0dp"
        android:contentDescription="@string/moe_money"
        android:scaleType="centerInside"
        android:src="@drawable/im_moe_money" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="@string/text_view_login_title"
        android:textColor="@color/moe_money_background_invert"
        android:textSize="16sp"
        android:textStyle="bold"
        android:typeface="serif" />

    <EditText
        android:id="@+id/edit_text_login_username"
        style="@style/custom_edit_text_rounded"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/edit_text_username" />

    <EditText
        android:id="@+id/edit_text_login_password"
        style="@style/custom_edit_text_rounded"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/edit_text_password"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/button_login_login"
        style="@style/custom_button_breaker_bay"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:onClick="sendMessage"
        android:text="@string/button_login_login"
        android:textAlignment="center" />

    <Button
        android:id="@+id/button_forgot_password"
        style="@style/custom_button_transparent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:text="@string/text_forgot_password" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:text="@string/text_view_login_text1" />

    <Button
        android:id="@+id/button_login_register"
        style="@style/custom_button_sorbus"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:text="@string/button_login_register" />

</LinearLayout>